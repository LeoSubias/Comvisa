{% extends 'base.html.twig' %}
{% block body %}
<div class="uk-position-relative">        
    {% for indexPage in indexPages %}
    <div class="uk-align-center uk-section" >
        <img class="uk-align-center" src="{{ asset('image/place-comedie-montpellier.jpg') }}">
            
            <h3 class="uk-text-center">{{ indexPage.titreIntro|raw }}</h3>
            <div class="uk-text-center uk-grid-match uk-child-width-1-1@s" uk-grid>
                    <div>{{ indexPage.texteIntro|raw }}</div>
            </div>
                <a class="uk-button uk-align-center icon-hover" href="#target" uk-scroll><span uk-icon="icon:  chevron-down ; ratio: 4"></span></a>
    </div>
         
        <div id="target" class="uk-background-secondary color1"></div>
            <div id="map" style="width:100%;height:25em;z-index:2;"></div>
        <div class=" uk-background-secondary color1"></div>
    <div class="uk-section-xsmall"><hr class="uk-divider-icon"></div>

        {# L'espace de coworking #}
        <div class="uk-section-large uk-panel uk-background-secondary uk-light ">
            <h2>{{ indexPage.titreCoWorking|raw }}</h2>
            <p>{{ indexPage.texteCoWorking|raw }}</p>
        </div>

    <div class="uk-section-xsmall"><hr class="uk-divider-icon"></div>
    
    <div uk-slider="center: true">

    <div class="uk-position-relative uk-visible-toggle uk-light">

        <ul class="uk-slider-items uk-child-width-1-2@s uk-grid">
            {% for rubrique in rubriques %}
            <li>
                <div class="uk-card uk-card-default">
                    <div class="uk-card-media-top">
                        <a href="{{ path('rubrique_show', {'id': rubrique.id }) }}">
                        <img id="scale_img_rub" class="img-test uk-width-xlarge" src="/uploads/Photo/{{ rubrique.photo }}" alt="Coworker"></a> 
                    </div>
                    <div class="uk-card-body">
                        <h3 class=" uk-text-center uk-card-title">{{ rubrique.nom|raw }}</h3>
                    </div>
                </div>
            </li>
            {% endfor %}
        </ul>

        <a class="uk-position-center-left uk-position-small uk-hidden-hover" href="#" uk-slidenav-previous uk-slider-item="previous"></a>
        <a class="uk-position-center-right uk-position-small uk-hidden-hover" href="#" uk-slidenav-next uk-slider-item="next"></a>

    </div>

    <ul class="uk-slider-nav uk-dotnav uk-flex-center uk-margin"></ul>

</div>


 <div class="uk-section-xsmall"></div>

    {# description coworker #}
    <div class="uk-text-center uk-section-small">
        <h2>{{ indexPage.titreCoWorker|raw }}</h2>
        <p>{{ indexPage.texteCoWorker|raw }}</p>
    </div>
     <div class="uk-section-xsmall"></div>
{# coworker photo #}
 <div class="uk-position-relative uk-visible-toggle uk-light" uk-slider>

    <ul class="uk-slider-items uk-child-width-1-2 uk-child-width-1-3@s uk-child-width-1-4@m " id="scale_img">
        {% for coworkerPhoto in coworkerPhotos %}
        <li id="scale_img">
            <img id="scale_img" src="/uploads/Photo/{{ coworkerPhoto.photo }}" alt="{{ coworkerPhoto.nom }}">
            <div class="uk-overlay uk-overlay-primary uk-position-bottom uk-text-center">
                    <h3 class="uk-margin-remove">{{ coworkerPhoto.nom|raw }}</h3></a>
            </div>
        </li>
        {% endfor %}    
    </ul>
        <a class="uk-position-center-left uk-position-small uk-hidden-hover" href="#" uk-slidenav-previous uk-slider-item="previous"></a>
        <a class="uk-position-center-right uk-position-small uk-hidden-hover" href="#" uk-slidenav-next uk-slider-item="next"></a>
    </div>
</div>

    <div class="uk-section-xsmall"><hr class="uk-divider-icon"></div>

{# Annonce #}

    <div class="uk-text-center uk-section-small">
        <h2>{{ indexPage.titreAnnonce|raw }}</h2>
        <p>{{ indexPage.texteAnnonce|raw }}</p>
    </div>
    <section class=" uk-section-large " uk-grid>
            {% set try = annonces|length %}
            {% set try1 = annonces|length - 1 %}
            {% set try2 = annonces|length - 2 %}
            {% set try3 = annonces|length - 3 %}
            {% set try4 = annonces|length - 4 %}
            {% set test = 100 %}

                    <div class="marg-btn" uk-switcher="animation: uk-animation-fade">
                
            {% for annonce in annonces|slice(try4 , try ) %}
                        <button class="uk-button uk-button-secondary" type="button">{{  annonce.titre }}</button>
            {% endfor %}
                    </div>
<ul class="uk-switcher">
    {% block content %}
    {% for annonce in annonces|slice(try4 , try ) %}
            <li>
                    
                <div>
                        <img id="img-ann-index-resp" class=" img-ann-index" src="/uploads/Photo/{{ annonce.photo }}">
                </div>
                    
                <div>
                    <h3 id="titre-ann" class=" titre-ann uk-card-title">{{ annonce.titre|raw }}</h3>
                            <div class="texte-ann uk-card" >
                                <p>{{ annonce.texte|raw }}</p> 
                                <span class="uk-text-center ">Type Annonce : {{ annonce.type_annonce|raw }} </span>
                            </div>
                </div>
            </li>
        {% endfor %}
    
    {% endblock %}
</ul>
    </section> 
        <div class="uk-section-small"></div>

{% endfor %}
{% endblock %}
    
{% block javascript %}
<script type="text/javascript" src="{{ asset('js/googlemap.js') }}"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAFPRccgbPWJbt-sSn70yHx1B91Mxk2qzo&callback=myMap"></script>
{% endblock %}
