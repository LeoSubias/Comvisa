{% extends 'base.html.twig' %}
{% block body %}
<div class="uk-position-relative">        
    {% for indexPage in indexPages %}
    <div class="uk-align-center uk-section" >
        <img class="uk-align-center" src="{{ asset('image/place-comedie-montpellier.jpg') }}">
            
            <h3 class="uk-text-center">{{ indexPage.titreIntro|raw }}</h3>
            <div class="uk-text-center uk-grid-match uk-child-width-1-1@s" uk-grid>
                    <div>{{ indexPage.texteIntro|raw }}</div>
            </div>
                <a class="uk-button uk-align-center test2" href="#target" uk-scroll><span uk-icon="icon:  chevron-down ; ratio: 4"></span></a>
    </div>
         
        <div id="target" class="color1"></div>
            <div id="map" style="width:100%;height:25em;z-index:2;"></div>
        <div class="color1"></div>
        {# L'espace de coworking #}
    <div class="uk-text-center uk-section-small">
        <h3>{{ indexPage.titreCoWorking|raw }}</h3>
        <p>{{ indexPage.texteCoWorking|raw }}</p>
    </div>

        {# Les coworkers #}

    <div class="uk-text-center uk-section-small">
        <h3>{{ indexPage.titreCoWorker|raw }}</h3>
        <p>{{ indexPage.texteCoWorker|raw }}</p>
    </div>
    <div class="uk-text-center uk-section-small">
        <h3>{{ indexPage.titreAnnonce|raw }}</h3>
        <p>{{ indexPage.texteAnnonce|raw }}</p>
    </div>
{# Annonce #}
 <div class="uk-position-relative uk-visible-toggle uk-light uk-section" uk-slider>

    <ul class="uk-slider-items uk-child-width-1-2 uk-child-width-1-3@s uk-child-width-1-4@m " id="scale_img">
        {% for annonce in annonces %}
        <li id="scale_img">
            <img id="scale_img" src="/uploads/Photo/{{ annonce.photo }}" alt="{{ annonce.titre }}">
            <div class="uk-overlay uk-overlay-primary uk-position-bottom uk-text-center">
                <a class="lien-ann" href="annonce/{{ annonce.id }}" title="{{ annonce.titre }}">
                    <h3 class="uk-margin-remove">{{ annonce.titre }}</h3></a>
                    <h6 class="uk-margin-remove">{{ annonce.type_annonce }}</h6>
            </div>
        </li>
        {% endfor %}    
    </ul>
        <a class="uk-position-center-left uk-overlay-primary uk-position-small uk-hidden-hover" href="#" uk-slidenav-previous uk-slider-item="previous"></a>
        <a class="uk-position-center-right uk-overlay-primary uk-position-small uk-hidden-hover" href="#" uk-slidenav-next uk-slider-item="next"></a>
    </div>
</div>
            
{#  #}

{% endfor %}
{% endblock %}
    
{% block javascript %}
<script type="text/javascript" src="{{ asset('js/googlemap.js') }}"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAFPRccgbPWJbt-sSn70yHx1B91Mxk2qzo&callback=myMap"></script>
{% endblock %}